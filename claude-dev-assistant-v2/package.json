{
  "name": "claude-dev-assistant-v2",
  "displayName": "Claude Dev Assistant for STAKE",
  "description": "AI-powered development assistant with Claude 4 support for STAKE project",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude.openChat",
        "title": "üí¨ Chat with Claude"
      },
      {
        "command": "claude.quickAction.addReferralChart",
        "title": "üìä Add Referral Chart"
      },
      {
        "command": "claude.quickAction.fixMobileIssues",
        "title": "üì± Fix Mobile Issues"
      },
      {
        "command": "claude.quickAction.addNewTier",
        "title": "üèÜ Add New Tier"
      },
      {
        "command": "claude.quickAction.optimizePerformance",
        "title": "‚ö° Optimize Performance"
      },
      {
        "command": "claude.quickAction.syncLeaderboard",
        "title": "üîÑ Sync Leaderboard"
      },
      {
        "command": "claude.quickAction.deployPreview",
        "title": "üöÄ Deploy Preview"
      },
      {
        "command": "claude.analyzeFile",
        "title": "üîç Analyze Current File"
      },
      {
        "command": "claude.configureApiKey",
        "title": "üîë Configure API Key"
      }
    ],
    "keybindings": [
      {
        "command": "claude.openChat",
        "key": "ctrl+shift+c",
        "when": "editorTextFocus"
      },
      {
        "command": "claude.analyzeFile",
        "key": "ctrl+shift+a",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "claude.analyzeFile",
          "group": "claude"
        }
      ],
      "explorer/context": [
        {
          "command": "claude.analyzeFile",
          "group": "claude"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "claudeAssistant",
          "name": "ü§ñ Claude Assistant",
          "when": "true",
          "icon": ""
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-assistant",
          "title": "Claude Assistant",
          "icon": "$(robot)"
        }
      ]
    },
    "configuration": {
      "title": "Claude Dev Assistant",
      "properties": {
        "claude.apiKey": {
          "type": "string",
          "default": "",
          "description": "Claude API Key (stored securely)",
          "scope": "application"
        },
        "claude.model": {
          "type": "string",
          "default": "claude-3-5-sonnet-20241022",
          "enum": [
            "claude-3-5-sonnet-20241022",
            "claude-3-5-sonnet-20240620", 
            "claude-3-5-haiku-20241022",
            "claude-3-opus-20240229",
            "claude-3-sonnet-20240229",
            "claude-3-haiku-20240307"
          ],
          "description": "Claude model to use",
          "scope": "application"
        },
        "claude.maxTokens": {
          "type": "number",
          "default": 4096,
          "description": "Maximum tokens for Claude responses",
          "scope": "application"
        },
        "claude.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save files after Claude modifications",
          "scope": "application"
        },
        "claude.stakeProjectPath": {
          "type": "string",
          "default": "",
          "description": "Path to STAKE project root",
          "scope": "workspace"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}