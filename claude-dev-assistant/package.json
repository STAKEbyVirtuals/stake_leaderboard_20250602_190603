{
  "name": "claude-dev-assistant",
  "displayName": "Claude Dev Assistant",
  "description": "AI-powered development assistant with Claude integration",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude.openChat",
        "title": "Claude: Start Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "claude.analyzeFile",
        "title": "Claude: Analyze Current File",
        "icon": "$(search)"
      },
      {
        "command": "claude.fixCode",
        "title": "Claude: Fix Code Issues",
        "icon": "$(tools)"
      },
      {
        "command": "claude.generateTests",
        "title": "Claude: Generate Tests",
        "icon": "$(beaker)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "claude-chat",
          "name": "Claude Assistant",
          "icon": "$(comment)",
          "when": "true"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "claude-chat",
        "contents": "Welcome to Claude Dev Assistant!\n[Start Chat](command:claude.openChat)\n[Configure API Key](command:claude.configureApiKey)"
      }
    ],
    "configuration": {
      "title": "Claude Dev Assistant",
      "properties": {
        "claude.apiKey": {
          "type": "string",
          "default": "",
          "description": "Claude API Key (stored securely)",
          "scope": "machine"
        },
        "claude.model": {
          "type": "string",
          "default": "claude-opus-4-20250514",
          "description": "Claude model to use",
          "enum": [
            "claude-opus-4-20250514",
            "claude-sonnet-4-20250514",
            "claude-3-5-sonnet-20241022",
            "claude-3-5-sonnet-20240620", 
            "claude-3-5-haiku-20241022",
            "claude-3-opus-20240229",
            "claude-3-sonnet-20240229",
            "claude-3-haiku-20240307"
          ]
        },
        "claude.maxTokens": {
          "type": "number",
          "default": 4000,
          "description": "Maximum tokens for Claude responses"
        },
        "claude.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save files after Claude modifications"
        },
        "claude.projectContext": {
          "type": "string",
          "default": "STAKE Leaderboard Project",
          "description": "Project context for Claude"
        }
      }
    },
    "keybindings": [
      {
        "command": "claude.openChat",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      },
      {
        "command": "claude.analyzeFile",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "claude.analyzeFile",
          "group": "claude",
          "when": "editorTextFocus"
        },
        {
          "command": "claude.fixCode",
          "group": "claude",
          "when": "editorTextFocus"
        }
      ],
      "view/title": [
        {
          "command": "claude.openChat",
          "when": "view == claude-chat",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}